
@model ItemVM;

@if (TempData["success"] != null)
{
    <h2>@TempData["success"]</h2>
}

<form method="post" class="container border p-4 text-center" enctype="multipart/form-data">
   <input asp-for="Item.Id" hidden />
    <h3>@(Model?.Item.Id != 0 ? "Update" : "Create+") Item</h3>
    <hr class="Width 100%" />
   
     <div class="row">
    <div class="col-10">
            <div class="col">
                <input asp-for="Item.Title" type="text" class="form-control" placeholder="Title">
                <span asp-validation-for="Item.Title" class="text-danger"></span>
            </div>
            <div class="col mt-5">
        
                <textarea class="form-control" rows="3" asp-for="Item.Description" placeholder="Description" typeof="text"></textarea>
                <span asp-validation-for="Item.Description" class="text-danger"></span>
            </div>
            <div class="col mt-5">
                <input asp-for="Item.AuthorName" type="text" class="form-control" placeholder="AuthorName">
                <span asp-validation-for="Item.AuthorName" class="text-danger"></span>
            </div>
          
            <div class="col mt-5">
                <input asp-for="Item.Genre" type="text" class="form-control" placeholder="Genre">
                <span asp-validation-for="Item.Genre" class="text-danger"></span>
            </div>
          
            <div class="col mt-5">
                <input asp-for="Item.Price" type="number" class="form-control" placeholder="Price">
                <span asp-validation-for="Item.Price" class="text-danger"></span>
            </div>
          
          
            <div class="col mt-5">
                <input type="file" name="file" class="form-control border-0 shadow">
                <label asp-for="Item.ImageUrl" class="ms-2"></label>

            </div>
          
    </div>
    <div class="col-2">
            <img src="~/@Model?.Item.ImageUrl" alt="ImageIntercepted" width="100%" />
    </div>
     </div>
   
        <div class="d-flex justify-content-lg-between align-items-center gap-4">
        @if (Model?.Item.Id != 0)
        {
            <button class="mt-3 btn btn-primary">Update</button>
        }
        else
        {
            <button class="mt-3 btn btn-primary">Create+</button>
        }
        <a asp-controller="Items" asp-action="Index"
               class="link-danger"> Go to Previous page</a>
        </div>
    </div>
</form>



    @{
        <partial name="_ValidationScriptsPartial" />
    };
}