@model List<Company>
@if (TempData["success"] != null)
{
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <h2>@TempData["success"]</h2>
}

<div class="container border-1 mt-4">
    <div class="row  p-2 bg-white text-dark d-flex justify-content-center align-Companys-center">
        <div class="col-6">
            <h2 class="">Company list.</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Company" asp-action="CreateUpdate">+ Add new list</a>
        </div>
    </div>

    <table id="tblData" class="table table-striped mt-5">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Phone Number</th>
                <th scope="col">State</th>
                <th scope="col">Street Address</th>
                <th scope="col">Postal Code</th>
               
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Obj in Model)
            {
                <tr>
                    <td>@Obj.Id</td>
                    <td>@Obj.Name</td>
                   
                    <td>@Obj.PhoneNumber</td>
                    <td>@Obj.State</td>
                    <td>@Obj.StreetAddress</td>
                    <td>@Obj.PostalCode</td>
                    <td>
                        <div class="d-flex  gap-3">
                            <a asp-controller="Company" asp-route-id="@Obj.Id" asp-action="CreateUpdate" class="btn btn-primary mx-2">Edit</a>
                            <a asp-controller="Company" asp-action="Delete" asp-route-id="@Obj.Id" class="btn btn-danger mx-2">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>


