
@model Company;

@if (TempData["success"] != null)
{
    <h2>@TempData["success"]</h2>
}

<form method="post" class="container border p-4 text-center" enctype="multipart/form-data">
   
    <h3>@(Model?.Id != 0 ? "Update" : "Create+") Company</h3>
    <hr class="Width 100%" />
   
     <div class="row">
    <div class="col-10">
            <div class="col">
                <input asp-for="Name" type="text" class="form-control" placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span> 
            </div>
            <div class="col mt-5">
        
                <textarea class="form-control" rows="3" asp-for="State" placeholder="State" typeof="text"></textarea>
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="col mt-5">
                <input asp-for="StreetAddress" type="text" class="form-control" placeholder="StreetAddress">
                <span asp-validation-for="StreetAddress" class="text-danger"></span>
            </div>
            <div class="col mt-5">
                <input asp-for="City" type="text" class="form-control" placeholder="City">
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="col mt-5">
                <input asp-for="PostalCode" type="text" class="form-control" placeholder="PostalCode">
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
          
            <div class="col mt-5">
                <input asp-for="PhoneNumber" type="number" class="form-control" placeholder="Phone Number">
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
      
    </div>
  
     </div>
   
        <div class="d-flex justify-content-lg-between align-Companys-center gap-4">
        @if (Model?.Id != 0)
        {
            <button class="mt-3 btn btn-primary">Update</button>
        }
        else
        {
            <button class="mt-3 btn btn-primary">Create+</button>
        }
        <a asp-controller="Companys" asp-action="Index"
               class="link-danger"> Go to Previous page</a>
        </div>
    </div>
</form>



    @{
        <partial name="_ValidationScriptsPartial" />
    };
}