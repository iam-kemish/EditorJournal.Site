@model Item

<div class="container my-3">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card mb-4 shadow p-3 mb-5 bg-white rounded border-top border-5 rounded shadow">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="~/@Model?.ImageUrl" class="img-fluid rounded-start" alt="Item Image">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title fs-3 fw-normal">@Model.Title</h5>
                            <p class="card-text">@Model.Description</p>
                            <p class="card-text fw-bold">By @Model.AuthorName</p>
                            <p class="card-text">@Model.Price$</p>
                            <p class="card-text">@Model.Genre</p>
                            <a href="#" class="btn btn-primary">Buy Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
